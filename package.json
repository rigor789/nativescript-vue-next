{
  "private": true,
  "version": "3.0.0-dev",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "node scripts/build.js",
    "size": "node scripts/build.js nativescript-vue runtime size-check -p -f global",
    "lint": "prettier --write --parser typescript \"packages/**/*.ts?(x)\"",
    "lint:apps": "prettier --write \"apps/**/app/**/*.{js,css,json}\"",
    "test": "jest",
    "test:ci": "jest --ci --runInBand --coverage && make-coverage-badge",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "dev:ns": "node scripts/dev.js runtime --formats esm-bundler",
    "postinstall": "node scripts/postinstall.js"
  },
  "types": "test-dts/index.d.ts",
  "tsd": {
    "directory": "test-dts"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "node scripts/verifyCommit.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write",
      "git add"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 80
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.9.4",
    "@rollup/plugin-commonjs": "14.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-replace": "^2.3.3",
    "@types/jest": "^26.0.10",
    "@types/puppeteer": "^3.0.1",
    "@vue/compiler-sfc": "^3.0.0-rc.5",
    "brotli": "^1.3.2",
    "chalk": "^4.1.0",
    "conventional-changelog-cli": "^2.1.0",
    "csstype": "^3.0.2",
    "enquirer": "^2.3.6",
    "execa": "^4.0.3",
    "fs-extra": "^9.0.1",
    "jest": "^26.4.0",
    "lint-staged": "^10.2.11",
    "make-coverage-badge": "^1.2.0",
    "minimist": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "~2.0.5",
    "rollup": "^2.25.0",
    "rollup-plugin-terser": "^7.0.0",
    "rollup-plugin-typescript2": "^0.27.2",
    "semver": "^7.3.2",
    "ts-jest": "^26.2.0",
    "tsd": "^0.13.1",
    "typescript": "^3.9.7",
    "yorkie": "^2.0.0"
  }
}
